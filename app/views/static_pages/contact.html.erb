<section id="contact">
  <div class="col-lg-6 col-md-6" id="map">
    <p>insert map here</p>
  </div> <!-- end map -->
      <div class="col-lg-6 col-md-6" id="deets">
        <div class="header-contact">
          <h1><strong><u>Bikes London</u></strong></h1>
          </div>
        </div> <!-- end header-->
        <div class="body-contact" class="col-lg-12 col-md-12">
          <h5>11 Gloucester Road,London AB56 7GH</h5>
        </div> <!-- end body contact -->
        <br>
        <div class="center-contact" class="col-lg-12 col-md-12">
          <ul class="list-unstyled" id="directory">
            <li><span class="glyphicon glyphicon-phone-alt"></span> mobile +(12)345678910</li>
            <li><span class="glyphicon glyphicon-envelope"></span> email <a href="mailto:abcdef@ghijklm.com?Subject=Enquiry" target="_top"><font color="white"><u>abcdef@ghijklm.com</u></font></a></li>
            <li><span class="glyphicon glyphicon-file"></span> fax +(12)12113114</li>
            <li><span class="glyphicon glyphicon-retweet"></span> twitter<a href="https://twitter.com/pjbasa"><font color="white"><u>@pjbasa</u></font></a></li>
          </ul> <!--end id contacts -->
        </div> <!-- end center contact -->
      </div> <!-- end #contact -->
        <div class="form">
          <div class="row">
            <div id="must" class="col-lg-8 col-md-8">
              <h1><strong><u>Let's Talk!</u></strong></h1>
              <p>*(required fields)</p>
            </div>
          </div>

          <%= flash[:notice] %>

          <%= form_tag("/static_pages/thank_you") do %>
          <div class="row">
            <div class="col-md-12 col-lg-12">
              <div class="form-group">
                <%= label_tag :name, "Your Name*" %>
                <%= text_field_tag :name, nil, class: "form-control", placeholder: "John Doe", required: true %>
              </div> 
              <div class="form-group">
                <%= label_tag :email, "Your Email Address*" %>
                <%= email_field_tag :email, nil, class: "form-control", placeholder: "john.doe@hello.com", required: true %>
              </div>
              <div class="form-group" id="message">
                <%= label_tag :message, "Your Message*" %>
                <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message", required: true %>
              </div>      
            </div>
          </div><!-- end row -->
          <%= submit_tag "Send", class: "btn btn-info" %>   
          <% end %>
        </div> <!-- end form -->
      </div> <!--end center-contact -->
      <div id="availability-contact" class="col-xs-12 col-md-12 col-lg-12">
        <h3>Available 24/7, 365 days a year (send message or <a href="mailto:abcdef@ghijklm.com?Subject=Enquiry"><font color="white"><u>email</u></font></a> to confirm)</h3>
      </div> <!-- end availability -->
    </section> <!--end contact -->