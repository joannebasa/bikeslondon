<% if signed_in? %>
  <h4>Add a Review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
     <p>
      <%= f.label :user, "Name" %><br>
      <%= f.text_field :user %>
    </p>
    <p>
      <%= f.label :body, "Add a Review:" %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <div class="rating"></div>
    </p>
    <p>
      <%= f.submit "Submit", class: 'btn btn-info', id: 'pass-comment' %>
    </p>
  <% end %>
<% end %>